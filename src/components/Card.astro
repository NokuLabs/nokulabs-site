---
const { title, badge } = Astro.props;
---

<div class="glow rounded-3xl border border-white/10 bg-white/5 p-6 transition will-change-transform hover:-translate-y-0.5 hover:border-white/20 hover:bg-white/[0.07]">
  <div class="flex items-start justify-between gap-4">
    <h3 class="text-sm font-semibold text-white">{title}</h3>
    {badge && (
      <span class="rounded-full border border-white/10 bg-white/5 px-2 py-1 text-[10px] text-white/60">
        {badge}
      </span>
    )}
  </div>
  <div class="mt-3 text-sm text-white/70">
    <slot />
  </div>
</div>